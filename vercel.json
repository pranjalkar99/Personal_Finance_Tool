{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "backend/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/api/index.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret-key",
    "DATABASE_URL": "@database-url",
    "DEBUG": "false",
    "JSON_LOGS": "true"
  }
}

